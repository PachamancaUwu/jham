@model IEnumerable<jhampro.Models.Documento>

@{
    ViewData["Title"] = "Ver Documentos";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">ðŸ“„ Lista de Documentos</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No hay documentos subidos aÃºn.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Archivo</th>
                    <th>Fecha Subida</th>
                    <th>ObservaciÃ³n</th>
                    <th>Servicio ID</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var doc in Model)
                {
                    <tr>
                        <td class="text-center">@doc.Id</td>
                        <td>
                            <a asp-action="DescargarSeguro" asp-route-id="@doc.Id" target="_blank" class="btn btn-outline-primary btn-sm">
                                @doc.NombreArchivo
                            </a>
                        </td>
                        <td class="text-center">@doc.FechaSubida.ToString("dd/MM/yyyy")</td>
                        <td>@doc.Observacion</td>
                        <td class="text-center">@doc.ServicioId</td>
                        <td class="text-center">
                            <a asp-action="Actualizar" asp-route-id="@doc.Id" target="_blank" class="btn btn-sm btn-success me-1" title="Actualizar">
                                <i class="bi bi-download"></i> Actualizar
                            </a>
                            <a asp-action="DescargarSeguro" asp-route-id="@doc.Id" target="_blank" class="btn btn-sm btn-success me-1" title="Descargar">
                                <i class="bi bi-download"></i> Descargar
                            </a>

                            <form asp-action="Eliminar" method="post" asp-route-id="@doc.Id" style="display:inline-block;" onsubmit="return confirm('Â¿EstÃ¡s seguro de que deseas eliminar este documento?');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- BotÃ³n para subir nuevo documento (siempre visible en la parte inferior) -->
<div class="container mt-3 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <a asp-action="Gestionar" class="btn btn-primary btn-sm w-50">
                <i class="bi bi-upload"></i> Subir documento nuevo
            </a>
        </div>
    </div>
</div>
