@model jhampro.Models.Documento

@{
    ViewData["Title"] = "Actualizar Documento";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">ðŸ“¤ Actualizar Documento</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <form asp-action="Actualizar" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                          <label asp-for="Observacion" class="form-label fw-bold">ObservaciÃ³n (opcional)</label>
                          <textarea asp-for="Observacion" class="form-control" rows="3"></textarea>
                          <span asp-validation-for="Observacion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ServicioId" class="form-label fw-bold">Servicio ID</label>
                            <input asp-for="ServicioId" class="form-control" />
                            <span asp-validation-for="ServicioId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Archivo" class="form-label fw-bold">Archivo PDF o Word</label>
                            <input type="file" name="Archivo" class="form-control" accept=".pdf,.doc,.docx" />
                            @{
                                var archivoState = ViewData.ModelState.ContainsKey("Archivo") ? ViewData.ModelState["Archivo"] : null;
                            }
                            @if (archivoState != null)
                            {
                                <span class="text-danger">
                                    @(archivoState.Errors.FirstOrDefault()?.ErrorMessage)
                                </span>
                            }
                            @if (!string.IsNullOrEmpty(Model?.NombreArchivo))
                            {
                                <div class="mt-2">
                                    <span class="small text-muted">Archivo actual: </span>
                                    <a asp-action="DescargarSeguro" asp-route-id="@Model.Id">@Model.NombreArchivo</a>
                                </div>
                            }
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Actualizar Documento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
